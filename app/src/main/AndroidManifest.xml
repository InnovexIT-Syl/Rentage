<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rentage">
    <!-- Camera and Storage permission will be required -->

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/rentage"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutActivity" />
        <activity android:name=".AuthenticationActivity" />
        <activity android:name=".InfoCheckoutActivity" />
        <activity android:name=".AddedCartActivity" />
        <activity android:name=".RentSpecificActivity" />
        <activity android:name=".AddToCartActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Add in Application Tag -->
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"/>
    </application>

</manifest>