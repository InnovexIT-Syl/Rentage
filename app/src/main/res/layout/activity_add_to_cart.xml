<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".AddToCartActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_add_to_cart"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/add_cart_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:contentDescription="TODO"
                    android:src="@drawable/add_to_cart" />

                <TextView
                    android:id="@+id/add_to_cart_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Range Rover Sport"
                    android:textColor="#181819"
                    android:textSize="27dp" />

                <TextView
                    android:id="@+id/add_to_cart_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AED 1,000.00"
                    android:textColor="#2B2B2C"
                    android:textSize="22dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Give your quantity"
                    android:textColor="#181819"
                    android:textSize="19dp" />

                <EditText
                    android:id="@+id/quantity"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/subscribe_edit_text_style"
                    android:hint="Quantity"
                    android:inputType="text"
                    android:paddingLeft="10dp"
                    android:textColor="#2B2B2C" />

                <Button

                    android:id="@+id/addToCartButton"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/subscribe_edit_text_style"
                    android:focusable="true"
                    android:padding="5dp"
                    android:text="ADD TO CART"
                    android:textColor="#232222"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/byeItNowButton"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/subscribe_button_style"
                    android:focusable="true"
                    android:padding="5dp"
                    android:text="BYE IT NOW"
                    android:textColor="#fff"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Before paying, please contact with us..."
                    android:textColor="#181819"
                    android:textSize="19dp" />

                <TextView
                    android:id="@+id/featured_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AED 1,000 per Day (VAT inclusive)"
                    android:textColor="#181819"
                    android:textSize="19dp" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
