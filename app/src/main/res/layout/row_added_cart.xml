<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="3dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="3dp">

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/added_cart_image"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/todo"
                android:scaleType="fitXY"
                android:src="@drawable/yachts"
                android:textColor="#181819" />

            <TextView
                android:id="@+id/added_cart_image_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Azimut Yacht 48 ft"
                android:textColor="#86868A"
                android:textSize="15dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/added_cart_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="AED 1,200.00"
                    android:textColor="#13F613"
                    android:textSize="16dp" />

<!--                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton-->
<!--                    android:id="@+id/quantity_number_button"-->
<!--                    android:layout_width="70dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_marginStart="5dp"-->
<!--                    app:backGroundColor="#4E4EE3"-->
<!--                    app:finalNumber="20"-->
<!--                    app:initialNumber="10" />-->

                <TextView
                    android:id="@+id/rent_cart_total_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:text="AED 1,200.00"
                    android:textColor="#EA2828"
                    android:textSize="16dp" />
            </LinearLayout>

            <Button
                android:layout_marginTop="7dp"
                android:id="@+id/cart_remove_button"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/subscribe_button_style"
                android:focusable="true"
                android:padding="4dp"
                android:text="REMOVE"
                android:textColor="#fff"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>