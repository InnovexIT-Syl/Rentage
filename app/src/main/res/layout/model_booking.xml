<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/booking_image"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/icon_helicopter" />

        <TextView
            android:id="@+id/booking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/helicopter_rides"
            android:textColor="#181819"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/booking_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/helicopter_text"
            android:textColor="#181819"
            android:textSize="16sp"
            android:textStyle="normal" />
        <Button
            android:id="@+id/booking_button"
            android:layout_height="35dp"
            android:layout_width="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/home_button_style"
            android:focusable="true"
            android:padding="6dp"
            android:text="@string/book_now" />
    </LinearLayout>
</androidx.cardview.widget.CardView>